{
  "name": "text-version",
  "version": "1.0.2",
  "homepage": "https://github.com/RavelloH/text-version",
  "description": "A lightweight text version management system with differential storage and version rollback capabilities. Similar to Git's version management mechanism, but specifically optimized for text content.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "publish": "npm run build && npm publish"
  },
  "keywords": [
    "version",
    "text",
    "diff",
    "typescript",
    "storage"
  ],
  "author": "RavelloH",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rollup": "^4.13.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "diff-match-patch": "^1.0.5"
  },
  "peerDependencies": {
    "diff-match-patch": "^1.0.5"
  }
}
